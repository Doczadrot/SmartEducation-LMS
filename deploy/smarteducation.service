
[Unit]
Description=SmartEducation Django Application
After=network.target

[Service]

User=ubuntu
Group=ubuntu


WorkingDirectory=/home/ubuntu/SmartEducation/SmartEducation


Environment=PATH=/home/ubuntu/venv/bin


EnvironmentFile=/home/ubuntu/SmartEducation/.env


ExecStart=/home/ubuntu/venv/bin/gunicorn --workers 3 --bind 127.0.0.1:8000 SmartEducation.wsgi:application

Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target

